@code
{
    private List<ProductModel> products = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            var list = await httpClient.GetFromJsonAsync<List<ProductModel>?>("Products");
            if (list != null)
            {
                products = list;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine(ex.Message);
        }
    }
}
