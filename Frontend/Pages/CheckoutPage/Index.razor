@page "/checkout"

@* Page Header Start *@
<div class="container-fluid bg-secondary mb-5">
    <div class="d-flex flex-column align-items-center justify-content-center" style="min-height: 300px">
        <h1 class="fw-semi-bold text-uppercase mb-3">Checkout</h1>
        <div class="d-inline-flex">
            <p class="m-0"><a href="">Home</a></p>
            <p class="m-0 px-2">-</p>
            <p class="m-0">Checkout</p>
        </div>
    </div>
</div>

@* Checkout Start *@
<div class="container-fluid pt-5">
    <div class="row px-xl-5">
        <div class="col-lg-6">
            <div class="card border-info mb-5">
                <div class="card-header bg-secondary border-0">
                    <h4 class="fw-bold m-0">Order Summary</h4>
                </div>
                <div class="card-body">
                    <h5 class="fw-medium mb-3">Products</h5>
                    <div class="d-flex justify-content-between">
                        <p>Colorful Stylish Shirt 1</p>
                        <p>$150</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Colorful Stylish Shirt 2</p>
                        <p>$150</p>
                    </div>
                    <div class="d-flex justify-content-between">
                        <p>Colorful Stylish Shirt 3</p>
                        <p>$150</p>
                    </div>
                    <hr class="mt-0">
                    <div class="d-flex justify-content-between mb-3 pt-1">
                        <h6 class="fw-medium">Subtotal</h6>
                        <h6 class="fw-medium">$150</h6>
                    </div>
                    <div class="d-flex justify-content-between">
                        <h6 class="fw-medium">Shipping</h6>
                        <h6 class="fw-medium">$10</h6>
                    </div>
                </div>
                <div class="card-footer border-secondary bg-transparent">
                    <div class="d-flex justify-content-between mt-2">
                        <h5 class="fw-bold">Total</h5>
                        <h5 class="fw-bold">$160</h5>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-6">
            @* Billing Address *@
            <div class="card border-info mb-4">
                <div class="card-header bg-secondary border-0 d-flex" role="button" data-bs-toggle="collapse"
                    data-bs-target="#billingAddress">
                    <h4 class="fw-bold m-0">Billing Address</h4>
                    <h4 class="ms-auto mt-1">
                        <i class="fa-solid fa-angle-down"></i>
                    </h4>
                </div>
                <div class="card-body collapse" id="billingAddress">
                    <div class="row">
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>First Name</label>
                                <input class="form-control" type="text" placeholder="John">
                            </div>
                        </div>
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input class="form-control" type="text" placeholder="Doe">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>E-mail<span class="text-danger fw-bold">*</span></label>
                                <input class="form-control" type="email" placeholder="example@email.com">
                            </div>
                        </div>
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>Mobile No</label>
                                <input class="form-control" type="text" placeholder="+123 456 789">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>Address Line 1</label>
                                <input class="form-control" type="text" placeholder="123 Street">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>Address Line 2</label>
                                <input class="form-control" type="text" placeholder="123 Street">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>Country</label>
                                <input class="form-control" type="text" placeholder="United States">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>State</label>
                                <input class="form-control" type="text" placeholder="New York">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>City</label>
                                <input class="form-control" type="text" placeholder="New York">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>ZIP Code</label>
                                <input class="form-control" type="text" placeholder="123">
                            </div>
                        </div>
                    </div>
                    @* <div class="form-check my-3">
                    <input type="checkbox" class="form-check-input" id="newaccount">
                    <label class="form-check-label" for="newaccount">Create an account</label>
                    </div> *@
                    <div class="card-footer border-secondary bg-transparent mt-3">
                        <div class="d-grid col-4 mx-auto">
                            <button class="btn btn-sm btn-primary fw-bold my-3 py-3">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
            @* Shipping Address *@
            <div class="card border-info mb-4">
                <div class="card-header bg-secondary border-0 d-flex" role="button" data-bs-toggle="collapse"
                    data-bs-target="#shippingAddress">
                    <h4 class="fw-bold m-0">Shipping Address</h4>
                    <h4 class="ms-auto mt-1">
                        <i class="fa-solid fa-angle-down"></i>
                    </h4>
                </div>
                <div class="card-body collapse" id="shippingAddress">
                    <div class="form-group mb-2">
                        <input type="checkbox" class="form-check-input" id="shipto">
                        <label class="form-check-label" for="shipto">Same as Billing Address</label>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>First Name</label>
                                <input class="form-control" type="text" placeholder="John">
                            </div>
                        </div>
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>Last Name</label>
                                <input class="form-control" type="text" placeholder="Doe">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>E-mail<span class="text-danger fw-bold">*</span></label>
                                <input class="form-control" type="email" placeholder="example@email.com">
                            </div>
                        </div>
                        <div class="col-md-6 col-12 mb-2">
                            <div class="form-group">
                                <label>Mobile No</label>
                                <input class="form-control" type="text" placeholder="+123 456 789">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>Address Line 1</label>
                                <input class="form-control" type="text" placeholder="123 Street">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>Address Line 2</label>
                                <input class="form-control" type="text" placeholder="123 Street">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>Country</label>
                                <input class="form-control" type="text" placeholder="United States">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>State</label>
                                <input class="form-control" type="text" placeholder="New York">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>City</label>
                                <input class="form-control" type="text" placeholder="New York">
                            </div>
                        </div>
                        <div class="col-md-6 col-12">
                            <div class="form-group mb-2">
                                <label>ZIP Code</label>
                                <input class="form-control" type="text" placeholder="123">
                            </div>
                        </div>
                    </div>
                    <div class="card-footer border-secondary bg-transparent mt-3">
                        <div class="d-grid col-4 mx-auto">
                            <button class="btn btn-sm btn-primary fw-bold my-3 py-3">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
            @* Payment *@
            <div class="card border-info mb-4">
                <div class="card-header bg-secondary border-0 d-flex" role="button" data-bs-toggle="collapse"
                    data-bs-target="#payment">
                    <h4 class="fw-bold m-0">Payment</h4>
                    <h4 class="ms-auto mt-1">
                        <i class="fa-solid fa-angle-down"></i>
                    </h4>
                </div>
                <div class="card-body collapse" id="payment">
                    <div class="form-group">
                        <input type="radio" class="form-check-input" name="payment" id="paypal">
                        <label class="form-check-label me-2" for="paypal">Visa</label>
                    </div>
                    <div class="form-group">
                        <input type="radio" class="form-check-input" name="payment" id="directcheck">
                        <label class="form-check-label me-2" for="directcheck">Cash</label>
                    </div>
                    <div class="form-group">
                        <input type="radio" class="form-check-input" name="payment" id="banktransfer">
                        <label class="form-check-label me-2" for="banktransfer">Bank Transfer</label>
                    </div>
                    <div class="card-footer border-secondary bg-transparent mt-3">
                        <div class="d-grid col-4 mx-auto">
                            <button class="btn btn-sm btn-primary fw-bold my-3 py-3">Apply</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="d-grid mx-auto col-6">
                <a class="btn btn-lg btn-primary fw-bold my-3 py-3" href="/post-checkout">Place Order</a>
            </div>
        </div>
    </div>
</div>